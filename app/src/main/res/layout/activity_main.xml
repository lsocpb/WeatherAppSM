<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idRLHome"
        android:visibility="visible">

        <ImageView
            android:id="@+id/idIVHomebg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/homebg" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/idRLcityName">

            <TextView
                android:id="@+id/idTVcurrentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/currentLocation"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:fontFamily="@font/sfprodisplaymedium" />

            <TextView
                android:id="@+id/idTVcityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/idTVcurrentLocation"
                android:text="@string/cityName"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAllCaps="true"
                app:fontFamily="@font/sfprodisplaybold" />


            <ImageButton
                android:id="@+id/locationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/idTVcurrentLocation"
                android:layout_centerHorizontal="true"
                android:src="@drawable/baseline_add_location_alt_24"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginLeft="10dp"
                app:tint="@android:color/white"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/idTVtemp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/idRLcityName"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/temperature"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:fontFamily="@font/sfprodisplaythinitalic"/>

        <TextView
            android:id="@+id/idTVtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/idTVtempRange"
            android:layout_marginTop="10dp"
            android:text="Overcast"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:fontFamily="@font/sfprodisplaymedium" />

        <TextView
            android:id="@+id/idTVtempRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/idRVweather"
            android:text="20° / 15°"
            android:textColor="@color/textColor"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/sfprodisplayregular"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/idRVweather"
            android:layout_below="@id/idTVtemp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/idRVweather">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/idRVweather"
                app:cardElevation="0dp"
                android:backgroundTint="@color/cardview_shadow_start_color">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/idTVuvIndex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="UV INDEX"
                        android:textColor="@color/textColor"
                        android:textSize="11sp"
                        app:fontFamily="@font/sfprodisplaymedium" />


                    <TextView
                        android:id="@+id/idTVindex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idTVuvIndex"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="50sp"
                        android:layout_marginLeft="10dp"
                        app:fontFamily="@font/sfprodisplayregular" />

                    <TextView
                        android:id="@+id/idTVindexText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idTVindex"
                        android:layout_centerHorizontal="true"
                        android:text="Low"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:fontFamily="@font/sfprodisplaymedium" />

                    <ProgressBar
                        android:id="@+id/idProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_below="@id/idTVindexText"
                        android:layout_marginTop="20dp"
                        android:max="10"
                        android:progress="1"
                        android:progressTint="@android:color/holo_red_dark" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/idRVweather"
                app:cardElevation="0dp"
                android:backgroundTint="@color/cardview_shadow_start_color">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/idTVWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="WIND"
                        android:textColor="@color/textColor"
                        android:textSize="11sp"
                        app:fontFamily="@font/sfprodisplaymedium" />


                    <TextView
                        android:id="@+id/idTVWindSpd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idTVWind"
                        android:layout_centerHorizontal="true"
                        android:text="0 km/h"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_marginLeft="10dp"
                        app:fontFamily="@font/sfprodisplayregular" />

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_below="@id/idTVWindSpd"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="30dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/windy" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:backgroundTint="@android:color/transparent">

        <ImageButton
            android:id="@+id/toolbar_item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_dehaze"
            android:backgroundTint="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_radio_button_checked_24"
                app:tint="@android:color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_radio_button_unchecked_24"
                app:tint="@android:color/white" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/toolbar_item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/baseline_map_24" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_settings_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/settingsButton"
        app:tint="@android:color/white"
        android:backgroundTint="@android:color/transparent"/>

</RelativeLayout>