<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idRLHome"
        android:visibility="visible">

        <ImageView
            android:id="@+id/idIVHomebg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/homebg" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/idRLcityName">

            <TextView
                android:id="@+id/idTVcityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/cityName"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:fontFamily="@font/sfprodisplaymedium" />

            <ImageButton
                android:id="@+id/locationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/idTVcityName"
                android:layout_centerHorizontal="true"
                android:src="@drawable/baseline_add_location_alt_24"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginLeft="10dp"
                app:tint="@android:color/white"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/idTVtemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idRLcityName"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/temperature"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:fontFamily="@font/sfprodisplaymedium"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:backgroundTint="@android:color/transparent">

        <ImageButton
            android:id="@+id/toolbar_item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_dehaze"
            android:backgroundTint="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_radio_button_checked_24"
                app:tint="@android:color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_radio_button_unchecked_24"
                app:tint="@android:color/white" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/toolbar_item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/baseline_map_24" />

    </LinearLayout>

</RelativeLayout>
